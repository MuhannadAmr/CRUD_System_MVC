@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}


@if (Model.Count() > 0)
{
    <h1>All Users</h1>

    <div class="mt-4">
        <form method="get" asp-action="Index" class="row offset-2">
            <div class="col-md-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="User Email" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <table class="table table-hover table-striped mt-3">
        <thead>
        <th>@Html.DisplayNameFor(D => D.Id)</th>
        <th>@Html.DisplayNameFor(D => D.FName)</th>
        <th>@Html.DisplayNameFor(D => D.LName)</th>
        <th>@Html.DisplayNameFor(D => D.Email)</th>
        <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
        <th>@Html.DisplayNameFor(D => D.Roles)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@Html.DisplayFor(U => user.Email)</td>
                    <td>@Html.DisplayFor(U => user.PhoneNumber)</td>
                    <td>@string.Join(",",user.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5"><h1>There is no users</h1></div>
}

