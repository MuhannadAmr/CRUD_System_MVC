@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Login";
}


<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Login" method="post">

            <input class="form-control email" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>

            <input class="form-control" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for=RemeberMe class="checkbox">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't you have an Account? <a asp-action="Register"> Sign Up Now!</a></p>
        <p><a asp-action="ForgetPassword">Forget Password</a></p>
    </div>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}