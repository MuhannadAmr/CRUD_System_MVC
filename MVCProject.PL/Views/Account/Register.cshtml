@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<input class="form-control" asp-for="FName" placeholder="First Name">
			<span asp-validation-for="FName" class="text-danger"></span>
			<br />
			<input class="form-control" asp-for="LName" placeholder="Last Name">
			<span asp-validation-for="LName" class="text-danger"></span>

			<input class="form-control email" asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input class="form-control" asp-for="Password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />
			<input class="form-control w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input asp-for=IsAgree class="checkbox">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do you have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>

@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}