@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.RoleName Role</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Id"></label>
        <input class="form-control" asp-for="@Model.Id" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.RoleName"></label>
        <input class="form-control" asp-for="@Model.RoleName" />
    </div>
    <input type="submit" class="btn btn-primary" value="Save" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>