@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary">Create Role</a>

@if (Model.Count() > 0)
{
    <h1>All Roles</h1>

    <div class="mt-4">
        <form method="get" asp-action="Index" class="row offset-2">
            <div class="col-md-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role Name" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>

    <table class="table table-hover table-striped mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Id)</td>
                <td>@Html.DisplayNameFor(D => D.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5"><h1>There is no roles</h1></div>
}



